{
    "querystring": {},
    "schema": {
    	"lineascarrospisos": {
            "rel": "idlineapedido",
            "querystring": {}
        }
    },
    "layout": {
        "labelDetalle": {
            "componente": "YBLabel",
            "style": {
                "fontSize": "18px",
                "fontWeight": "bold",
                "width": "100%",
                "textAlign":"center"
            },
            "text": "%yb1 / %yb2",
            "params": [
                {"type": "model", "key": "referencia"},
                {"type": "model", "key": "descripcion"}
            ]
        },
        "labelCantidad": {
            "componente": "YBLabel",
            "text": "Cantidad esperada: %yb1",
            "style": {
                "fontSize": "16px",
                "fontWeight": "400",
                "width": "40%",
                "position": "relative",
                "float": "left",
                "marginBottom": "10px"
            },
            "params": [
                {"type": "model", "key": "cantidad"}
            ]
        },
        "labelMontada": {
            "componente": "YBLabel",
            "text": "Montada: %yb1",
            "style": {
                "fontSize": "16px",
                "fontWeight": "400",
                "width": "40%",
                "position": "relative",
                "float": "left"
            },
            "params": [
                {"type": "model", "key": "cantmontada"}
            ]
        },
        "lineascarrospisosGrid": {
            "componente": "YBTable",
            "label": "Lineas Carros y Pisos",
            "prefix": "lineascarrospisos",
            "multiselectable": false,
            "class": "claseGrid",
            "columns": [
                {"tipo": "field", "listpos": "body", "key": "numcarro", "label": "Carro", "width": 20},
                {"tipo": "field", "listpos": "body", "key": "numpiso", "label": "Piso", "width": 20},
                {
                    "tipo": "field",
                    "listspos": "body",
                    "key": "cantidad",
                    "label": "Detalle",
                    "width": 20,
                    "editable": true,
                    "act": {
                        "key": "cambiarCantidad",
                        "success": [
                            {"slot": "refrescar", "custom": "carrospisos"}
                        ]
                    }
                },
                {
                    "tipo": "act",
                    "key": "delete",
                    "label": "Delete",
                    "success": [{"receiver": "tdb_crmcampanas", "slot": "refrescar"}]
                }
            ],
            "rowclick": ""
        },
        "groupBoxVolver": {
            "componente": "YBGroupBox",
            "className": "actionGB",
            "layout": {
                "volverButton": {
                    "componente": "YBButton",
                    "label": "Volver",
                    "className": "floatRight",
                    "buttonType": "raised",
                    "action": {
                        "key": "volverMaster",
                        "success": []
                    }
                }
            }
        }
    },
    "acciones": {
        "delete": {
            "label": "Prueba",
            "action": "deleteRow",
            "icon": "delete"
        },
        "volverMaster": {
            "action": "return"
        },
		"cambiarCantidad": {
            "action": "legacy",
            "icon": "payment",
            "serverAction": "cambiarCantidad",
            "prefix": "lineascarrospisos",
            "params": [
                {
                    "tipo": 3,
                    "verbose_name": "Cantidad",
                    "key": "cantidad",
                    "validaciones": null
                }
            ]
        }
    }
}

